
public class Coche {
	private String matricula;
	

	private String marca;
	private float precio;
	private Motor motor;
	
	//Constructor
	
	//Por defecto
	public Coche(){
		
	}
	
	//Constructor con todos los datos de un coche
	
	public Coche(String matricula, String marca,float precio,int nivelAceite,int cilindrada,int potecia){
		this.matricula = matricula;
		this.marca = marca;
		this.precio = precio;
		//Crear el objeto motor
		this.motor = new Motor(nivelAceite,cilindrada,potecia);
	
	}
	
	public String getMatricula() {
		return matricula;
	}

	public void setMatricula(String matricula) {
		this.matricula = matricula;
	}

	public String getMarca() {
		return marca;
	}

	public void setMarca(String marca) {
		this.marca = marca;
	}

	public float getPrecio() {
		return precio;
	}

	public void setPrecio(float precio) {
		this.precio = precio;
	}
	
	//Validar matricula
	private boolean validarMatricula(String matricula){
		boolean correcta = true;
		//Las matrículas tienen que tener 8 caracteres , los 4 primeros números
		if(matricula.length()==8){
			for(int i = 0;i<4;i++){
				if(Character.isLetter(matricula.charAt(i))){
					correcta = false;
					break; //Salgo del bucle
				}
			}
			
		}
		
		else{
			correcta = false;
		}
		
		return correcta;
		
	}
	
}
